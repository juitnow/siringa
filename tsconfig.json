{
  "compilerOptions": {
    "lib": [ "esnext" ],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": [ "node" ],
    "esModuleInterop": true,

    "noEmit": true,

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
  },
  "include": [
    "./build.ts",
    "./src",
  ],
}
